@model IEnumerable<BikeStores_MVC.Models.product>
@{
    ViewBag.Title = "Products";
}

<h2>Product List</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Model Year</th>
            <th>List Price</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            var brand = p.brand?.brand_name ?? "default";
            var safe = System.Text.RegularExpressions.Regex.Replace(brand, @"[^\w\-]", "");
            var img = Url.Content($"~/Bikes-Images/{safe}_bike.jpeg");

            <tr>
                <td>@p.product_name</td>
                <td>@p.model_year</td>
                <td>@p.list_price.ToString("C")</td>
                <td>@p.brand.brand_name</td>
                <td>@p.category.category_name</td>
                <td>
                    <img src="@img" alt="@brand" style="height:60px;width:auto"
                         onerror="this.src='@Url.Content("~/Bikes-Images/default.jpg")'" />
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = p.product_id }) |
                    @Html.ActionLink("Details", "Details", new { id = p.product_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = p.product_id })
                </td>
            </tr>
        }
    </tbody>
</table>
